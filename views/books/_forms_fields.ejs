<div>
  <label for="">Title</label>
  <input type="text" name="title" value="<%= book.title %>" />
</div>
<div>
  <label for="">Author</label>
  <select name="author">
    <% authors.forEach(author => { %> <% if(author.id === book.author) { %>
    <option selected value="<%= author.id %>"><%= author.name %></option>
    <% }else { %>
    <option selected value="<%= author.id %>"><%= author.name %></option>
    <% } %> <% }) %>
  </select>
</div>
<div>
  <label for="">Publish Date</label>
  <input
    type="date"
    name="publishDate"
    value="<%= book.publishDate == null ? '' : book.publishDate.toISOString().split('T') %>"
  />
</div>
<div>
  <label for="">Page Count</label>
  <input type="number" name="pageCount" value="<%= book.pageCount %>" min="1" />
</div>

<div>
  <label for="">Cover</label>
  <input type="file" name="coverImageName" class="filepond" />
</div>
<div>
  <label for="">Description</label>
  <textarea name="description" id="" cols="30" rows="10">
<%= book.description %></textarea
  >
</div>
